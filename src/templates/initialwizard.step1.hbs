<table id="listProjects" class="table table-striped">
	<tbody>
		{{#each projects}}
		<tr>
		<td class="name">{{this.name}}</td><td class="open"><button type="button" class="btn btn-primary" data-path="{{this.path}}">{{gettext "Open"}}</button></td>
		</tr>
		{{/each}}
	</tbody>
</table>

<div class="btn-toolbar" role="toolbar">
	<div class="btn-group" role="group">
		<button id="newproject" class="btn btn-default" type="button" style="display:inline-block">{{gettext "New project"}}</button>
		<button id="openproject" class="btn btn-primary" type="button" style="display:inline-block">{{gettext "Open project"}}</button>
		<button id="importproject" class="btn btn-primary" type="button" style="display:inline-block">{{gettext "Import project"}}</button>
	</div>
</div>